# Local env vars
EMAIL_RECIPIENT=<an email to send the footy emails>
SENDGRID_API_KEY=<sendgrid api key>
SECRET_KEY=<a random string for django>
FOOTY_TIPS_USERNAME=<username for an account on footytips.com.au>
FOOTY_TIPS_PASSWORD=<password for an account of footytips.com.au>
PROJECT_ID=<ID of the Google Cloud project>
DATABASE_NAME=<Name of the main database>
PRODUCTION_HOST=<IP address or hostname of the prod server>
DIGITAL_OCEAN_USER=<a user that can connect to the DO server>
PYTHONPATH=./src # so VSCode knows where to find tipping modules
AWS_CLIENT_TIMEOUT=900000 # Denominated in ms, this is so 'sls invoke' won't timeout for longer functions

# CI env vars
# PROJECT_ID=<ID of the Google Cloud project>
